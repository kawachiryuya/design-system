{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$description": "Typography tokens. Reference: principles/content/typography/scale.md",
  "fontSize": {
    "xs": "12px",
    "sm": "14px",
    "base": "16px",
    "lg": "18px",
    "xl": "20px",
    "2xl": "24px",
    "3xl": "30px",
    "4xl": "36px",
    "5xl": "48px",
    "6xl": "60px"
  },
  "fontWeight": {
    "light": "300",
    "regular": "400",
    "medium": "500",
    "semibold": "600",
    "bold": "700"
  },
  "lineHeight": {
    "tight": "1.25",
