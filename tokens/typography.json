    "sans": [
      "-apple-system",
      "BlinkMacSystemFont",
      "\"Segoe UI\"",
      "Roboto",
      "\"Helvetica Neue\"",
      "Arial",
      "sans-serif"
    ],
    "serif": [
      "Georgia",
      "Cambria",
      "\"Times New Roman\"",
      "Times",
      "serif"
    ],
    "mono": [
      "\"Courier New\"",
      "Courier",
      "monospace"
    ]
  }
